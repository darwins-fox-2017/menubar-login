<% include ../partials/header %>
    <div class="container">
      <div class="row">
        <div class="title" style="text-align: center;">
          <h1>:: Welcome @Hacktiv8 Zone ::</h1>
        </div>
        <br>
        <hr>
        <h2><center>Login Menu</h2>
        <div class="imgcontainer">
          <center><img src="https://www.w3schools.com/howto/img_avatar2.png" alt="Avatar" style="width:10%">
          <form action="/users/login" method="post">
            <div class="form-group">
              <br>
              <label for="email">Email: </label>
              <input type="text" class="form-control" name="email" id="email" value="" placeholder="insert correct email, ex: sample@hacktiv8.com">
            </div>
            <div class="form-group">
              <label for="password">Password: </label>
              <input type="password" class="form-control" name="password" id="password" value="" placeholder="insert unique combination password">
            </div>
            <button type="submit" class="btn btn-primary">Log in</button>
          </form>
          <form action="/users/register" method="get">
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
      </div>
    </div>
<% include ../partials/footer %>
